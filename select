select_fn() {
    local ROWSNUMBER
    ROWSNUMBER=$(where_fn $COLUMN_NO $CONDITION "$INPUT")
    RC1=$?
    [[ 0 -eq $RC1 ]] && ROWSNUMBER=$(Format_fn $ROWSNUMBER) || { echo $ROWSNUMBER;  return $RC1; }
    select_data $1 $ROWSNUMBER | view_table $(load_metadata | get_columns_names $1) || return $?
}
